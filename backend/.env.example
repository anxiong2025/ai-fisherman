# App
DEBUG=true

# CORS (comma-separated)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Vector Store
CHROMA_PERSIST_DIR=./data/chroma

# Embedding Model (local, no API needed)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# LLM Provider: openai, anthropic, or gemini
LLM_PROVIDER=gemini

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-4o-mini

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Gemini (https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp

# Content directory to index
CONTENT_DIR=./content

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# JWT (change in production!)
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# OAuth - GitHub (https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth - Google (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL (for OAuth callback)
FRONTEND_URL=http://localhost:5173
